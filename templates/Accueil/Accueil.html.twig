{% extends "base.html.twig" %}
{% block title %}
    Accueil
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row mt-5">
            <div class="col-lg-6">
                {{ form_start(FormSearch) }}
                    <div class="row">
                        <div class="col">
                            {{ form_widget(FormSearch.mots) }}
                        </div>
                        <div class="col">
                            {{ form_widget(FormSearch.Recherche) }}
                        </div>
                    </div>
                {{ form_end(FormSearch) }}                
            </div>
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-4">
                        <button class="btn btn-warning btn-block">Envoier un email</button>
                    </div>
                    <div class="col-4">
                        <button class="btn btn-dark btn-block">Ajouter Etudiants</button>
                    </div>
                    <div class="col-4">
                        <button class="btn btn-danger btn-block">Genere un pdf</button>
                    </div>
                </div>           
                
            </div>
            
        </div>
        <div class="row">            
            <div class="col-lg-12">
               <table class="table">
                    <thead>
                        <tr>                            
                            <th scope="col">Nom: </th>
                            <th scope="col">Pr√©nom: </th>
                            <th scope="col">Sexe:</th>
                            <th scope="col">Date de Naissance:</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for Etudiant in Etudiants %}
                            <tr>
                            <td>{{ Etudiant.Nom }}</td>
                            <td>{{ Etudiant.Prenom }}</td>
                            <td>{{ Etudiant.Sexe }}</td>
                            <td>{{ Etudiant.DateDeNaissance |date('d/m/Y')}}</td>
                        </tr>
                        {% endfor %}                      
                        
                    </tbody>                    
               </table>               
            </div>
            
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="pagination  d-flex justify-content-center">
                    {{ knp_pagination_render(Etudiants) }}
                </div>
            </div>
        </div>

    </div>
    
{% endblock %}